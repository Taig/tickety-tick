{
  "private": true,
  "version": "4.0.0",
  "name": "tickety-tick",
  "description": "A browser extension that helps you to create commit messages and branch names from story trackers.",
  "author": "bitcrowd <tickety-tick@bitcrowd.net>",
  "license": "MIT",
  "scripts": {
    "build": "run-s -n 'build:* {*}' --",
    "build:chrome": "cross-env VARIANT=chrome rollup --config",
    "build:firefox": "cross-env VARIANT=firefox webpack --config webpack.config.babel.js",
    "watch:chrome": "run-s 'build:chrome --watch'",
    "watch:firefox": "run-s 'build:firefox --watch'",
    "open:chrome": "./script/open-in-chrome ./dist/chrome https://github.com/bitcrowd/tickety-tick",
    "open:firefox": "web-ext run --source-dir ./dist/firefox --pref startup.homepage_welcome_url=https://github.com/bitcrowd/tickety-tick",
    "bundle:chrome": "cross-env BUNDLE=true run-s build:chrome",
    "bundle:firefox": "cross-env BUNDLE=true run-s build:firefox",
    "sign": "web-ext sign --source-dir ./dist/firefox --artifacts-dir ./dist --channel=unlisted",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx .",
    "stylelint": "stylelint --ignore-path .gitignore --syntax scss 'src/**/*.scss'",
    "test": "jest",
    "checks": "run-s stylelint lint test"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "@rollup/plugin-babel": "^5.0.4",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-html": "^0.2.0",
    "@rollup/plugin-image": "^2.0.5",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@rollup/plugin-replace": "^2.3.3",
    "babel-jest": "^26.0.1",
    "chrome-launcher": "^0.13.2",
    "cross-env": "7.0.2",
    "cssnano": "^4.1.8",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "enzyme-to-json": "^3.4.0",
    "eslint": "7.0.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.10.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "jsdom": "16.2.2",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "postcss-preset-env": "^6.7.0",
    "react-test-renderer": "16.13.1",
    "rollup": "^2.19.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-postcss": "^3.1.2",
    "rollup-plugin-terser": "^6.1.0",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-junit-formatter": "^0.2.2",
    "stylelint-prettier": "^1.1.2",
    "web-ext": "4.2.0"
  },
  "dependencies": {
    "@githubprimer/octicons-react": "^8.5.0",
    "bootstrap": "4.4.1",
    "ky": "^0.19.1",
    "micro-match": "^1.0.1",
    "prettier": "^2.0.5",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "react-textarea-autosize": "^7.1.0",
    "speakingurl": "14.0.1",
    "stacktrace-js": "^2.0.0",
    "strip-indent": "^3.0.0",
    "webextension-polyfill": "^0.6.0"
  }
}
